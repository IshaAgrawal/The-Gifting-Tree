<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Missing Someone?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Send A Gift!</h1>
            <button class="px-6 py-2 rounded-full text-white font-bold mt-6 btn-primary">Order Now</button>
        </div class="w-1/2">
        <div>
            <img src="/img/ban.jpeg" alt="" style="height: 500px; width: 800px; margin-top: -50px;">
        </div>
    </div>
</section>

<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">All Items</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-x-12 gap-y-16">

        <%realtimeapps.forEach(function(realtimeapps) { %>
            <div class="w-full md:w-64">
                <img class="h-40 mb-4 mx-auto" src="/img/<%= realtimeapps.image%>" alt="">
                <div class="text-center">
                    <h2 class="mb-4 text-lg"><%= realtimeapps.name%></h2>
                    <div class="flex items-center justify-around mt-6">
                        <span class="font-bold text-lg">â‚¹<%= realtimeapps.price%></span>
                        <button data-realtimeapp="<%= JSON.stringify(realtimeapps)%>" class="add-to-cart py-1 px-6 rounded-full flex items-center font-bold">
                            <span>+</span>
                            <span class="ml-4">Add</span>
                        </button>
                    </div>
                </div> 
            </div>
        <% }) %>
    </div>
</section>
